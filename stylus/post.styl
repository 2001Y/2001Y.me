dark()
  @media (prefers-color-scheme dark)
    block

main 
  animation fadeIn 1.5s .5s forwards
  will-change opacity
  opacity 0
  z-index 8

h1
  font-size 2.5rem
  @media (max-width: 810px)
    margin-right 4rem
  opacity 0
  animation fadeIn 1.5s forwards
  will-change opacity
  color var(--d)
#article
  h2, h3, h4
    margin 1.5em 0 .6em 0
    span
      font-size: .7em
  strong
    letter-spacing 0
  p
    margin 1em auto
    text-indent 1em
    text-align justify
    max-width 43em
  b
    background: linear-gradient(transparent 70%, rgba(151,195,198,.3) 0%);
  a:not(.download),b
    font-weight bold
    margin -.2em .1em
    padding .2em .1em
    letter-spacing 0
  a:not(.download)
    color var(--w)
    text-indent 0
    transition: .3s;
    will-change: transform
    display: inline-block;
    &:hover
      transform:scale(1.1);
  img,source
    cursor pointer
    max-width 80%
    max-height 50vh
    width auto
    height auto
    transition transform .3s,box-shadow .3s
    will-change transform,box-shadow
    display block
    margin 0 auto .3rem auto
    border-radius: 12px
    &:hover
      transform scale(1.1)
      box-shadow 0rem 0rem 1rem 0rem rgba(0,0,0,.5)
    @media (max-width: 560px)
      max-width 100%
      // margin 0 -1rem .3rem -1rem
      border-radius 0
  textarea,input,iframe,canvas,img,source
    background var(--d05)
    +dark()
      background var(--l05)
  input[type=file]
    width: 100%;
    height: 100px;
    position: relative;
    visibility: hidden;
    &:hover:before
      color: var(--l05);
      +dark()
        color: var(--d05);
      border: var(--l05) dashed 3px;
      +dark()
        border: var(--d05) dashed 3px;
    &:before
      font-family icon,Helvetica,"游ゴシック Medium","Yu Gothic",YuGothic,-apple-system,Verdana,Meiryo
      content "Drag&Drop or CLICK"
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      position absolute
      top 0
      left 0
      width 100%
      height: 100%;
      font-size 1.5rem
      color: var(--d05);
      +dark()
        color: var(--l05);
      text-align: center;
      line-height:  94px;
      border: var(--d05) dashed 3px;
      +dark()
        border: var(--l05) dashed 3px;
      border-radius: 1.3rem;
      margin-bottom: 1%;
      visibility: visible
      transition: .3s;
  form
    div
      display: flex;
      justify-content: center;
      align-items: center;
      &:not(:last-child)
        margin-bottom .5rem
      *:last-child
        flex 1
      label + input
        margin-left 1rem !important
        transition .3s !important
      input:checked + label + input
        box-shadow: 0 0 0 .2rem var(--w)
  input
    &[type=checkbox],&[type=radio]
      width 2.4rem
      height 2.4rem
      border-radius 100%
      position relative
      &:after
        content ""
        width 0
        height 0
        top 1.2rem
        left 1.2rem
        border-radius 100%
        transition .3s
        will-change background
        position absolute
      &:checked:after
        width 1.2rem
        height 1.2rem
        top .6rem
        left .6rem
        background var(--w)
  textarea,input
    font-size .8em
    margin auto
    display block
    border-radius 1.3rem
    color var(--d)
    transition box-shadow .3s
    +dark()
      color var(--l)
    &:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([type="hidden"]):not([type="submit"]):not([type="reset"]):not([type="button"]):not([type="image"]):focus
      box-shadow: 0 0 0 .2rem var(--w)
  textarea,input:not([type="checkbox"]):not([type="radio"]):not([type="file"]):not([type="hidden"]):not([type="submit"]):not([type="reset"]):not([type="button"]):not([type="image"])
    width 100%
  textarea
    padding 1rem
    height 10.1em
  label
    padding .3rem
  button,input[type="button"],input[type="search"],input[type="text"]
    padding .3rem 1rem

#tmb
  img,source
    max-width 100%
    width 100%
    margin-bottom 2rem
    border-radius 0
    @media (max-width: 560px)
      max-width 100vw
      width 100vw
      margin 0 -1rem .3rem -1rem
figure
  color var(--d5)
  +dark()
    color var(--l5)
  font-size .8rem
  text-align center
  margin-bottom .6rem
.codepen
  width 80%
  @media (max-width: 600px)
    width 100%
  margin 0 auto .8em auto
  display block
.ad
  margin 2rem auto
  display: flex;
  justify-content: center;
  align-items: center;
  ins
    margin .5rem
hr
  width 30%
  height .3rem
  background: var(--d05)
  +dark()
    background: var(--l05)
  margin 3rem auto
  border-radius .15rem
code,.chroma,input[readonly=""]
  font-family Menlo, "Courier New", Consolas, monospace
.chroma
  font-size .8rem
p
  code
    font-size .8rem
    -webkit-user-select: all;
    user-select: all;
    word-wrap normal
    letter-spacing 0
    padding .2em .7em
    margin -.2em 0
    border-radius 9em
    background var(--d05)
    +dark()
      background: var(--l05)
.chroma,.bg,blockquote
  width 100%
  padding 1rem 1.5rem
  border-radius 2rem
.bg,blockquote
  &>*
    &:first-child
      margin-top .3rem !important
    &:last-child
      margin-bottom .3rem !important
.blogcard
  width 80%
  height 155px
  margin auto
  display block
  @media (max-width: 600px)
    width 100%

.caniuse
  transform-origin left top
  transform:scale(.8)
  width 125%
  height: 244px;
  border-bottom 2.4px solid #DB5600
  margin-bottom -49px
  &[src*="mdn"]
    border-bottom 2.4px solid #3d7e9a
  @media (max-width: 661px)
    height: 260px
    margin-bottom -52px
  @media (max-width: 602px)
    height: 343px
    margin-bottom -69px
.caniuse[href*="mdn"]
.center
  text-align center
.download
  background var(--w)
  color var(--d)
  padding .5rem 1.5rem
  display inline-block
  border-radius 2rem
  text-indent 0
  font-weight bold
  transition: .3s
  &:hover
    color var(--l)
    background var(--d)
    +dark()
      color var(--d)
      background var(--l)
  
table
  font-size .8em
  margin 0 auto
  border-collapse:  collapse;
th,td
  padding .2em 1em
th
  font-weight 800
  border-bottom: solid 1px;
  color var(--l)
  background var(--d)
  +dark()
    color var(--d)
    background var(--l)
tr>*+*
  border-left: solid 1px;
tr:nth-child(odd) td
  background var(--d05)
  +dark()
    background var(--l05)
#top
  color var(--l)
  font-size 3rem
  position absolute
  top 3rem
  right 1rem
  padding 1rem
  z-index 1 

#category
  font-size 1.5rem
  position absolute
  bottom -1.5rem
  right 0
.category
  padding .6rem .4rem
  margin 0 .2rem
  border-radius .9rem
  display inline-block
  transition background .4s
  will-change background
  position relative
  @media (max-width: 500px)
    margin 0
  &:after
    font-size 1rem
    content attr(data-tooltip)
    color var(--d)
    +dark()
      color var(--l)
    top 2.5rem
    left -1.3em
    width 5em
    text-align center
    position absolute
    transition .4s .1s
    will-change transform,opacity
    opacity 0
    display block
  &:hover:after
    transform translateY(.3rem)
    opacity 1
    @media (max-width: 500px)
      opacity 0
.Gadget>.Gadget:after,.Camera>.Camera:after,.Web>.Web:after,.Other>.Other:after
  will-change transform
  animation category 2s
  will-change opacity,transform
  @media (max-width: 500px)
    animation category .75s -.25s
    
#Voting
  font-weight bold
  text-align center
  padding 3em
  border-radius 3rem
  // margin 0 -1rem
  transition .3s
  z-index 8
.normal
  position fixed
  max-width 500px
  display block
  padding 0 1rem 1rem 1rem !important
  margin auto !important
  border-radius 2.5rem !important
  bottom .5rem
  left 0
  right 0
  opacity 0
  transition opacity 1s
  will-change opacity
  backdrop-filter: blur(10px);
  transform translateY(1rem)
  @media (max-width: 500px)
    bottom 0
    border-radius 2.5rem 2.5rem 0 0 !important
    padding-bottom 1.5rem
  #voting-box
    margin-top .5rem
.hover
  opacity .9
  transform translate(0)
  &:hover
    opacity 1
#Close
  cursor pointer
  width 100%
  background transparent
  &:after
    content ""
    width 8.3em
    height .25rem
    background var(--d5)
    +dark()
      background var(--l5)
    border-radius .2rem
    display block
    margin .8rem auto .5rem auto

#lightbox
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: url(/load.svg) no-repeat center, var(--l5);
  +dark()
    background: url(/load.svg) no-repeat center, var(--d5);
  backdrop-filter: blur(3px);
  z-index: 99;
  transition .3s;
  cursor pointer
  img,source
    max-width: 100vw;
    max-height 100vh
    position: fixed;
    top: 0;
    left: 0;
    right 0
    bottom 0
    margin auto
    transition .3s;
    @media (max-width: 870px) 
      min-width 100vw
#lightbox-figcaption
  z-index: 999;
  text-align center
  width 80vw
  position: fixed;
  right 10vw
  bottom 3rem
#Top,#Bottom
  position absolute

.close
  opacity: 0;
  visibility: hidden;
  source,img
    transform scale(.5)
.open
  opacity: 1;
  visibility: visible;    

#voting-box
  display flex
  justify-content center
  margin-top 1rem
#goodElem,#badElem
  font-weight bold
  cursor: pointer
  width 9rem
  height 3rem
  border-radius 1.5rem
  padding .5rem 1rem .5rem 2.5rem
  position relative
  transition .4s
  will-change background,color
  &:before
    position absolute
    left 1.2em
    top calc(50% - .5em)
#goodElem
  color var(--d)
  background var(--a)
  border solid var(--a)
  margin-right 1rem
  &:before
    content "\e903"
#badElem,#goodElem.done
  color var(--d)
  background var(--l)
  border solid var(--l)
  +dark()
    color var(--l)
    background var(--d)
    border solid var(--d)
#badElem:before
    content "\e905"

#goodElem:hover,#badElem:hover,#goodElem.stop,#badElem.stop
  color var(--l)
  background var(--d)
  border solid var(--d)
  +dark()
    color var(--d)
    background var(--l)
    border solid var(--l)
    
#fixed
  color var(--l)
  font-size 2rem
  width 7rem
  height 7rem
  padding 1.2rem .9rem
  position fixed
  top 0
  left 0
  background linear-gradient(to top left, rgba(255,255,255,0) 50%, var(--w) 50.5%) no-repeat top left/100% 100%
  transition .4s
  opacity 0
  transform translate(-7rem, -7rem);
  z-index 9
.fixed
  opacity .9 !important
  transform translate(0) !important
  &:hover
    opacity 1 !important
.done
  pointer-events: none;

#bgm
  position fixed
  bottom 2vw
  right 2vw
  opacity .5
  iframe 
    width 16vw
    height 9vw

.twitter-tweet
  margin -1.5rem auto !important
  transform scale(.8) !important
.youtube
  position relative
  width 80%
  margin auto
  @media (max-width: 560px)
    width 100%
    margin 0 -1rem
  &:before
    content ""
    display block
    padding-top 56.25%
  iframe
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

.noIndent
  text-indent 0!important

.mobile-scroll
  display flex
  overflow-x scroll
  overflow-y visible
  scroll-snap-type: x mandatory;
  &>*
    font-size 1em
    color var(--d)
    +dark()
      color var(--l)
    max-width 15rem
    width 15rem
    min-width 15rem
    margin 0 2rem
    scroll-snap-align: start;
    img,source
      max-height 100% !important
      max-width 100% !important
      margin-bottom 5rem
    @media (max-width: 600px)
      scroll-snap-align: center;
      max-width 60%
      width 60%
      min-width 60%

@media (min-width: 600px)
  .flex
    display: flex;
    margin: auto;
    &>*
      width: 50%;
      &:first-child
        margin-right: 1em;
  
@media (max-width: 500px)
  header
    margin 0 auto 2em auto
  #categoryBox,header .search-box
    bottom -2rem
@keyframes category
  0%
    transform translate(0)
    opacity 0
  20%,80%
    transform translateY(.3rem)
    opacity 1
  100%
    transform translate(0)
    opacity 0
@keyframes fadeIn
 0%
   opacity: 0
 100%
   opacity 1